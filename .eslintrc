env:
  es6: true
  node: true
  browser: true

parserOptions:
  sourceType: module

# この資料でes2015関連参考になる http://yoshiko-pg.github.io/slides/20160512-frontend-biz/
rules:
  no-new: 0
  no-unused-vars:
    - error
    - vars: all
      args: none
  indent:
    - error
    - 2
  quotes:
    - error
    - single
    - allowTemplateLiterals: true
  linebreak-style:
    - error
    - unix
  semi:
    - error
    - always
