env:
  es6: true
  node: true
  browser: true

parserOptions:
  sourceType: module

rules:
  no-new: 0
  no-unused-vars:
    - error
    - vars: all
      args: none
  indent:
    - error
    - 2
  quotes:
    - error
    - single
  linebreak-style:
    - error
    - unix
  semi:
    - error
    - always
